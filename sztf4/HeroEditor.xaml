<Window x:Class="sztf4.HeroEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sztf4"
        xmlns:vms="clr-namespace:sztf4.ViewModels"
        mc:Ignorable="d"
        Title="HeroEditor" Height="419" Width="335">
    <StackPanel>
 
        <Label Padding="10" FontSize="24" >Strength</Label>
        <TextBox Padding="10" Text="{Binding Actual.Strength}"></TextBox>
        <Label  FontSize="24" Padding="10">Speed</Label>
        <TextBox Text="{Binding Actual.Speed}" Padding="10"></TextBox>
        <Label  FontSize="24" Padding="10">Role</Label>
        <ComboBox ItemsSource="{Binding Roles}" SelectedItem="{Binding ActualRole}" ></ComboBox>
        
    </StackPanel>
</Window>
